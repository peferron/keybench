{
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES6",
    "lib": ["ES6", "ES2017.object"],
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs"
  },
  "include": [
    "src/**/*"
  ]
}
